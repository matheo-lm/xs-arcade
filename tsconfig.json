{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@platform/*": ["src/platform/*"],
      "@shared/*": ["src/shared/*"],
      "@games/*": ["src/games/*"],
      "@content/*": ["content/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*.ts",
    "content/**/*.json",
    "tests/**/*.ts",
    "vite.config.ts",
    "playwright.config.ts"
  ]
}
